#!/usr/bin/env ruby
require_relative '../config/environment'

def game_start
  puts "Welcome to Tic Tac Toe!"
  puts "Please choose player mode:

  0 - Computer vs. Computer
  1 - You vs. Computer
  2 - You vs. Friend"

  player_mode = gets.strip

  if player_mode == "1"
    Game.new(Players::Human.new("X"), Players::Human.new("O"), Board.new).play

end
